<script type="text/template" data-name='edit-template'>
  <div class="modal-header">
    <button class="close" data-dismiss="modal">Ã—</button>
    <h3><%% if (type === 'new') { %>Save<%% } else { %>Edit<%% } %> a link</h3>
  </div>
  <div class="modal-body">
    <form class="form-horizontal" action=''>

      <div class="control-group">
        <label class="control-label" for="url">URL<span class='required' title='required field'>*</span></label>
        <div class="controls">
          <input type="text" class="input-xlarge" id="url" name='url' placeholder='Paste the url' value='<%%= url %>' />
          <span class="help-block"></span>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="title">Title<span class='required' title='required fields'>*</span></label>
        <div class="controls">
          <input type="text" class="input-xlarge" id="title" name='title' placeholder='Provide a title' value='<%%= title %>' />
          <span class="help-block"></span>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="description">Description</label>
        <div class="controls">
          <textarea class="input-xlarge" id="description" name='description' cols='20' rows='5' placeholder='Provide a description'><%%= description %></textarea>
        </div>
      </div>
      <input type="submit" value="submit" />
    </form>
  </div>
  <div class="modal-footer">
    <%% if (type === 'edit') { %>
      <a href="#" class="btn btn-danger pull-left" data-type='destroy'><i class="icon-trash icon-white"></i> Delete</a>
    <%% } %>
    <a href="#" class="btn" data-type='cancel'>Cancel</a>
    <a href="#" class="btn btn-primary" data-type="<%% if (type === 'new') { %>create<%% } else { %>update<%% } %>">Submit</a>
  </div>
</script>